<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.smile.dao.PermissionDao">
<!--    根据角色ID查询关联的权限-->
    <select id="findByRoleId" parameterType="int" resultType="com.smile.pojo.Permission">
        select p.*
            from t_permission p,t_role_permission rp
            where p.id=rp.permission_id and rp.role_id=#{role_id}
    </select>
</mapper>